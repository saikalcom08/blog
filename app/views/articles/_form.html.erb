<div class="container">
  <%= form_with model: article do |form| %>
  <div class="row justify-content-center shadow p-3 mb-3 bg-info rounded">
    <div class="col-10">
      <%= render 'shared/errors'%>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-light"%><br>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="from-group row">
          <%= form.label :body, class: "col-2 col-form-label text-light"%><br>
          <div class="col-10">
            <%= form.text_area :body, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class = "dropdown mt-4">
          <%= form.label :status, class: "col-2 col-form-label text-light" %>
          <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
        </div>

        <div class="from-group row justify-content-center mb-4">
          <%= form.submit class: "btn btn-outline-light btn btn-lg"%>
        </div>
      <% end %>
    </div>
    <p><%= link_to "[Cancel and Return to article listing]", articles_path, class: "text-light" %></p>
  </div>
</div>
